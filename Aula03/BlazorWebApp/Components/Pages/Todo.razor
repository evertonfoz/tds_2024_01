@page "/todo"
@rendermode InteractiveServer

<h3>Todo (@todos.Count)</h3>

<ul>
    @foreach (var todo in todos)
    {
        @* <li> *@
            <input type="checkbox" @bind="todo.IsDone" /> 
            @todo.Title
            <br/>   
        @* </li> *@

    }
</ul>

<input @bind="newTodo"/>
<button @onclick="AddTodo" >Add</button>

@code {
    private List<Aula03.Blazor.Model.TodoItem> todos = new List<Aula03.Blazor.Model.TodoItem>();
    string newTodo="";

    void AddTodo()
    {
        if (!string.IsNullOrWhiteSpace(newTodo)) {
            todos.Add(new Aula03.Blazor.Model.TodoItem { Title = newTodo });
            newTodo = string.Empty;
        }
    }
    
}